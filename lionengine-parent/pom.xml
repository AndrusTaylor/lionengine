<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <properties>
        <b3dgs.version>1.0.3</b3dgs.version>
        <buildtools-project>lionengine-buildtools</buildtools-project>
        <radial-encapsulation-maven-plugin.version>1.0.0</radial-encapsulation-maven-plugin.version>
        <radial.base-package>com.b3dgs.lionengine</radial.base-package>
    </properties>
    <parent>
        <groupId>com.b3dgs</groupId>
        <artifactId>b3dgs-parent</artifactId>
        <version>1.0.3</version>
    </parent>
    <groupId>com.b3dgs.lionengine</groupId>
    <artifactId>lionengine-parent</artifactId>
    <packaging>pom</packaging>
    <version>8.4.0-SNAPSHOT</version>
    <name>LionEngine</name>
    <description>Java 2D Game Engine</description>
    <url>https://github.com/b3dgs/lionengine</url>
    <scm>
        <url>https://github.com/b3dgs/lionengine</url>
        <connection>scm:git:git@github.com:b3dgs/lionengine.git</connection>
        <developerConnection>scm:git:git@github.com:b3dgs/lionengine.git</developerConnection>
        <tag>HEAD</tag>
    </scm>
    <ciManagement>
        <system>TravisCI</system>
        <url>https://travis-ci.org/b3dgs/lionengine</url>
    </ciManagement>
    <profiles>
        <profile>
            <id>core</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>../lionengine-buildtools</module>
                <module>../lionengine-core</module>
                <module>../lionengine-core-awt</module>
                <module>../lionengine-core-android</module>
                <module>../lionengine-game</module>
                <module>../lionengine-network</module>
                <module>../lionengine-audio-wav</module>
                <module>../lionengine-audio-midi</module>
                <module>../lionengine-audio-sc68</module>
                <module>../lionengine-audio-adplug</module>
            </modules>
        </profile>
        <profile>
            <id>run-its</id>
            <modules>
                <module>../lionengine-buildtools</module>
                <module>../lionengine-core</module>
                <module>../lionengine-core-awt</module>
                <module>../lionengine-game</module>
            </modules>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-surefire-plugin</artifactId>
                            <version>${maven-surfire.version}</version>
                            <configuration>
                                <excludes>
                                    <exclude>**/*Test.java</exclude>
                                </excludes>
                            </configuration>
                        </plugin>
                        <plugin>
                            <groupId>org.jacoco</groupId>
                            <artifactId>jacoco-maven-plugin</artifactId>
                            <version>${jacoco.version}</version>
                            <executions>
                                <execution>
                                    <id>pre-integration-test</id>
                                    <phase>pre-integration-test</phase>
                                    <goals>
                                        <goal>prepare-agent</goal>
                                    </goals>
                                    <configuration>
                                        <destFile>${project.build.directory}/jacoco-it.exec</destFile>
                                        <dataFile>${project.build.directory}/jacoco-it.exec</dataFile>
                                        <append>true</append>
                                    </configuration>
                                </execution>
                                <execution>
                                    <id>post-integration-test</id>
                                    <phase>post-integration-test</phase>
                                    <goals>
                                        <goal>report</goal>
                                    </goals>
                                    <configuration>
                                        <destFile>${project.build.directory}/jacoco-it.exec</destFile>
                                        <dataFile>${project.build.directory}/jacoco-it.exec</dataFile>
                                        <append>true</append>
                                    </configuration>
                                </execution>
                            </executions>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
        </profile>
        <profile>
            <id>plugins</id>
            <modules>
                <module>../lionengine-buildtools</module>
                <module>../com.b3dgs.lionengine.target</module>
                <module>../com.b3dgs.lionengine.core.swt</module>
                <module>../com.b3dgs.lionengine.core.swt.test</module>
            </modules>
        </profile>
        <profile>
            <id>plugins-editor</id>
            <modules>
                <module>../lionengine-buildtools</module>
                <module>../com.b3dgs.lionengine.target</module>
                <module>../com.b3dgs.lionengine.core.swt</module>
                <module>../com.b3dgs.lionengine.core.swt.test</module>
                <module>../com.b3dgs.lionengine.editor</module>
                <module>../com.b3dgs.lionengine.editor.object</module>
                <module>../com.b3dgs.lionengine.editor.map</module>
                <module>../com.b3dgs.lionengine.editor.animation</module>
                <module>../com.b3dgs.lionengine.editor.collision</module>
                <module>../com.b3dgs.lionengine.editor.pathfinding</module>
            </modules>
        </profile>
        <profile>
            <id>repository</id>
            <modules>
                <module>../lionengine-buildtools</module>
                <module>../com.b3dgs.lionengine.target</module>
                <module>../com.b3dgs.lionengine.core.swt</module>
                <module>../com.b3dgs.lionengine.editor</module>
                <module>../com.b3dgs.lionengine.editor.object</module>
                <module>../com.b3dgs.lionengine.editor.map</module>
                <module>../com.b3dgs.lionengine.editor.animation</module>
                <module>../com.b3dgs.lionengine.editor.collision</module>
                <module>../com.b3dgs.lionengine.editor.pathfinding</module>
                <module>../com.b3dgs.lionengine.repository</module>
            </modules>
        </profile>
        <profile>
            <id>editor</id>
            <modules>
                <module>../lionengine-buildtools</module>
                <module>../com.b3dgs.lionengine.target</module>
                <module>../com.b3dgs.lionengine.core.swt</module>
                <module>../com.b3dgs.lionengine.editor</module>
                <module>../com.b3dgs.lionengine.editor.object</module>
                <module>../com.b3dgs.lionengine.editor.map</module>
                <module>../com.b3dgs.lionengine.editor.animation</module>
                <module>../com.b3dgs.lionengine.editor.collision</module>
                <module>../com.b3dgs.lionengine.editor.pathfinding</module>
                <module>../com.b3dgs.lionengine.editor.product</module>
            </modules>
        </profile>
        <profile>
            <id>editor-tests</id>
            <modules>
                <module>../lionengine-buildtools</module>
                <module>../com.b3dgs.lionengine.target</module>
                <module>../com.b3dgs.lionengine.core.swt</module>
                <module>../com.b3dgs.lionengine.editor</module>
                <module>../com.b3dgs.lionengine.editor.object</module>
                <module>../com.b3dgs.lionengine.editor.map</module>
                <module>../com.b3dgs.lionengine.editor.animation</module>
                <module>../com.b3dgs.lionengine.editor.collision</module>
                <module>../com.b3dgs.lionengine.editor.pathfinding</module>
                <module>../com.b3dgs.lionengine.editor.product</module>
                <module>../com.b3dgs.lionengine.editor.test</module>
                <module>../com.b3dgs.lionengine.editor.object.test</module>
                <module>../com.b3dgs.lionengine.editor.map.test</module>
                <module>../com.b3dgs.lionengine.editor.animation.test</module>
            </modules>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.eclipse.tycho</groupId>
                            <artifactId>tycho-surefire-plugin</artifactId>
                            <version>${tycho.version}</version>
                            <configuration>
                                <useUIHarness>true</useUIHarness>
                                <useUIThread>false</useUIThread>
                                <configuration>
                                    <includes>
                                        <include>**/*Test.java</include>
                                    </includes>
                                </configuration>
                                <product>com.b3dgs.lionengine.editor.product</product>
                                <forkedProcessTimeoutInSeconds>60</forkedProcessTimeoutInSeconds>
                            </configuration>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
        </profile>
        <profile>
            <id>examples</id>
            <modules>
                <module>../lionengine-buildtools</module>
                <module>../lionengine-examples</module>
                <module>../lionengine-tutorials</module>
            </modules>
        </profile>
    </profiles>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>lionengine-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>lionengine-core-awt</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>lionengine-network</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>lionengine-audio-wav</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>lionengine-audio-midi</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>lionengine-audio-sc68</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>lionengine-game</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.mobilepetroleum.radialencapsulation</groupId>
                    <artifactId>radial-encapsulation-maven-plugin</artifactId>
                    <version>${radial-encapsulation-maven-plugin.version}</version>
                    <configuration>
                        <basePackage>${radial.base-package}</basePackage>
                        <includeTestSources>false</includeTestSources>
                        <maxViolations>0</maxViolations>
                    </configuration>
                    <executions>
                        <execution>
                            <id>radial-encapsulation</id>
                            <phase>process-classes</phase>
                            <goals>
                                <goal>radial-encapsulation</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.eclipse.m2e</groupId>
                    <artifactId>lifecycle-mapping</artifactId>
                    <version>1.0.0</version>
                    <configuration>
                        <lifecycleMappingMetadata>
                            <pluginExecutions>
                                <pluginExecution>
                                    <pluginExecutionFilter>
                                        <groupId>com.mobilepetroleum.radialencapsulation</groupId>
                                        <artifactId>radial-encapsulation-maven-plugin</artifactId>
                                        <versionRange>[1.0.0,)</versionRange>
                                        <goals>
                                            <goal>radial-encapsulation</goal>
                                        </goals>
                                    </pluginExecutionFilter>
                                    <action>
                                        <ignore></ignore>
                                    </action>
                                </pluginExecution>
                            </pluginExecutions>
                        </lifecycleMappingMetadata>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>